{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": [
      "./src",
      "./test"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./tasks",
    "./test",
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}